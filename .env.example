# Backend Environment Variables

# Database Configuration
# For local development, use SQLite (default)
DATABASE_URL=sqlite:///data/tracker.db
# For production, use PostgreSQL or MySQL
# DATABASE_URL=postgresql://user:password@host:5432/tracker
# DATABASE_URL=mysql://user:password@host:3306/tracker

# AI/ML API Keys
# xAI Grok API key for truck classification
XAI_API_KEY=your_xai_api_key_here

# CORS Origins (comma-separated)
# For local development
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://frontend:3000
# For production (AWS)
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Logging
LOG_LEVEL=INFO

# Frontend Environment Variables

# Backend API URL
# For local development
NEXT_PUBLIC_API_URL=http://localhost:8000
# For Docker Compose
# NEXT_PUBLIC_API_URL=http://backend:8000
# For production (AWS with ALB)
# NEXT_PUBLIC_API_URL=https://api.yourdomain.com

# AWS-Specific Configuration (Production)

# AWS Region
AWS_REGION=us-east-1

# AWS Account ID (for ECR)
AWS_ACCOUNT_ID=123456789012

# Image Tag (for production deployments)
IMAGE_TAG=latest

# AWS Secrets Manager
# Set these in AWS Secrets Manager and reference them in ECS task definitions
# - XAI_API_KEY
# - DATABASE_URL
# - CORS_ORIGINS

# AWS EFS/S3 Configuration
# EFS_FILE_SYSTEM_ID=fs-xxxxx
# S3_BUCKET_NAME=tracker-data

# AWS CloudWatch Logs
# AWSLOGS_GROUP=/ecs/tracker
# AWSLOGS_REGION=us-east-1
